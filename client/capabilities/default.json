{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:default",
    "shell:allow-open",
    "shell:default", 
    "upload:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        "**",
        "$DOCUMENT/**",
        "$DESKTOP/**",
        "$DOWNLOAD/**",
        "$HOME/**"
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        "$APPDATA/**",
        "$APPCONFIG/**",
        "$APPCACHE/**",
        "$LOCALDATA/**",
        "cache/**"
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        "**",
        "$DOCUMENT/**",
        "$DESKTOP/**",
        "$DOWNLOAD/**",
        "$HOME/**"
      ]
    },
    "fs:default",
    "process:default",
    "os:default"
  ]
}