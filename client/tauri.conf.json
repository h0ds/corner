{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Corner",
  "version": "0.1.0",
  "identifier": "com.corner.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Corner",
        "decorations": false,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "resizable": true,
        "center": true,
        "minWidth": 600,
        "minHeight": 400,
        "visible": true,
        "dragDropEnabled": false,
        "minimizable": true,
        "maximizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    },
    "os": {
      "platform": true
    }
  }
}
