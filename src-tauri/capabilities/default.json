{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "shell:default",
    "upload:default",
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCACHE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-read",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCACHE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCACHE/**"
        }
      ]
    }
  ]
}